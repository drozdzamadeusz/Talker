@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<div class="row auth-row">
    <div class="col-md-12">
        <section>
            <form id="account" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group float-label">
                    <input asp-for="Input.Email" class="form-control" />
                    <label asp-for="Input.Email"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group float-label">
                    <input asp-for="Input.Password" class="form-control" />
                    <label asp-for="Input.Password"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>         
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-main">Log in</button>
                </div>
                <div class="form-group href-buttons">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot password <i class="fas fa-chevron-right"></i></a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register new user <i class="fas fa-chevron-right"></i></a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend confirmation <i class="fas fa-chevron-right"></i></a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
